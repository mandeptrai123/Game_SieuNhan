<UserControl x:Class="Example2311.Item_Skill"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Example2311"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <Button Click="ClickedImage" Margin="0 0 0 0" Width="40">
            <Button.Content>
                <Image x:Name="img_skill" HorizontalAlignment="Right"
                            Stretch="Fill" Source="/img/skill1.png"/>
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
